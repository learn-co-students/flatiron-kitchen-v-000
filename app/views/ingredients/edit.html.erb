<h3>Edit "<%= @ingredient.name %>"</h3>

<form id="edit_ingredient_<%= @ingredient.id %>" action="/ingredients/<%= @ingredient.id %>" method="post">
	<input type="hidden" name="_method" value="put">

	<label for="ingredient_name">Ingredient Name</label>
	<input id="ingredient_name" type="text" name="ingredient[name]" value="<%= @ingredient.name %>"> 
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >

	<input type="submit" value="Update Ingredient">
</form>