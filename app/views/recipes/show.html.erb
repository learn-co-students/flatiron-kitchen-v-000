<h1><%= @recipe.name %></h1>

<h2>Ingredients</h2>

<div>
  <ul>
    <%= @recipe.ingredients.each do |ingredient| %>
      <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
    <% end %>
  </ul>
</div>

<div>
  <ul>
    <li><%= link_to "Edit", edit_recipe_path(@recipe) %></li>
    <li><%= link_to "Back", recipes_path %></li>
  </ul>
</div>