<h3>Edit Recipe</h3>
<%= form_for @recipe, html: { id: "edit_recipe_#{@recipe.id}" } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  Ingredients: <br>
  <%= f.fields_for :ingredients do |ingredient| %>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br>
  <% end %>
  <%= f.submit %>
<% end %>
