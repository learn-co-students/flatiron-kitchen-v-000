<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= hidden_field_tag "recipe[ingredient_ids][]", nil %>
  <% @ingredients.each do |ingredient| %>
    <%= label_tag "ingredient_#{ingredient.id}", ingredient.name %>
    <%= check_box_tag "recipe[ingredient_ids][]", ingredient.id, @recipe.ingredients.include?(ingredient), id: "ingredient_#{ingredient.id}" %>
  <% end %>
  <br>

  <%= f.submit %>
<% end %>