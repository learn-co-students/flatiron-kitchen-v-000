<%= form_for @recipe do |f| %>
  <%= f.text_field :name %>

  <%= hidden_field_tag "recipe[ingredient_ids][]", nil %>
  <% Ingredient.all.each do |ingredient| %>
    <%= label_tag "ingredient_#{ingredient.id}", ingredient.name%>
    <%= check_box_tag "recipe[ingredient_ids][]", ingredient.id, Ingredient.all.include?(ingredient), id: "ingredient_#{ingredient.id}" %>
  <% end%>

  <%= f.submit %>
<% end %>
