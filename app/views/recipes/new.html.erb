<h1>New recipes</h1>
<%= form_for @recipe do |f|%>
  <%= f.label :name%>
  <%= f.text_field :name%>

<% end %>

<h2>Exisiting Ingredients </h2>
<%= form_for @ingredient do |f|%>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <%= f.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :name)%>
  <%= f.submit 'Create Recipe'%>

<% end %> 

