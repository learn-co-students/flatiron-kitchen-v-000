<%= form_for(recipe) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <br>
  <%= f.label :ingredients %><br>
   <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
   <br>
   <br>
  <%= f.label :ingredient_name %>
  <%= f.fields_for :ingredients, recipe.ingredients.build do |ingr| %><br><br>
    <%= ingr.label :name %>
    <%= ingr.text_field :name %>
    <% end %>
    <br>
    <br>
  <%= f.submit %>
<% end %>