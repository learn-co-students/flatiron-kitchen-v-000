<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>

  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name, label: "Custom" %> <br>

  <%= f.fields_for :ingredients, 2.times{@recipe.ingredients.build} do |ingredient| %>
    <%= ingredient.label :ingredient %>
    <%= ingredient.text_field :name %>
    <!-- <%= ingredient.check_box :_destroy %>Remove<br> -->
  <% end %> <br>

  <%= f.submit %>

<% end %>
