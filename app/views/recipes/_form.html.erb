<% if @recipe.errors.any? %>
  <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @recipe do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br>
  <p><%= f.label :ingredients %><br>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
  <p><%= f.submit %>
<% end %>
