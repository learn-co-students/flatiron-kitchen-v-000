<%= form_for recipe do |f| %>
  <div class="field">
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :ingredients, "Ingredients:" %>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name, include_blank: true %>
  </div>
  <br><br>
  <%= f.submit %>
<% end %>
