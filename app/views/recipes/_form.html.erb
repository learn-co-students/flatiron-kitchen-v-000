<%= form_for recipe do |f| %>

<br><%= f.label :name %>
<br><%= f.text_field :name %>
<br><%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
<br><%= f.fields_for :ingredient_attributes, recipe.ingredients.build do |ingredient_fields| %>
<br>New Ingredient:<%= ingredient_fields.text_field :name %>
<br><% end %>
<%= f.submit %>
<% end %>