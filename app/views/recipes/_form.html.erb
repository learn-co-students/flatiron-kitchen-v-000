<%= form_for(recipe) do |f|%>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
</p>
<p>
  <%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredients_field| %>
    <%= ingredients_field.label :name %>
    <%= ingredients_field.text_field :name %>
  <% end %>
</p>
  <%= f.submit %>
<% end %>