<%= form_for recipe do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
  </div>
  <% if recipe.id %>
    <%= f.submit "Update Recipe" %>
  <% else %>
    <%= f.submit "Create Recipe" %>
  <% end %>
<% end %>
