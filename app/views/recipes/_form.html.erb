<%= recipe_builder.label :name %><br>
<%= recipe_builder.text_field :name %><br>

<%= recipe_builder.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br>
<%= recipe_builder.fields_for :ingredients, @recipe.ingredients.build do |ingredient_builder| %>
  <label>New Ingredient</label>
  <%= ingredient_builder.text_field :name %>
<% end %>
<br>
<%= recipe_builder.submit  %>
