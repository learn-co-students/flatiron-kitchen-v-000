<%= form_for recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |ingredient| %>
    <%= ingredient.label for: ingredient.text %>
    <%= ingredient.check_box id: ingredient.text %>
  <% end %>
  <%= f.submit %>
<% end %>