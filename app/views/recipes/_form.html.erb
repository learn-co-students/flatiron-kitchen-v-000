<%= form_for recipe do |f| %>
<%= f.label :name %>:
<%= f.text_field :name, placeholder: "Name of the Recipe" %>

<%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name do |b| %>
  <p><%= b.check_box %><%= b.label %></p>
<% end %>

<h4>Add a New Ingredient</h4>
<%= f.fields_for :ingredients, recipe.ingredients.build do |ingredients_fields| %>
  <%= ingredients_fields.label :name %>:
  <%= ingredients_fields.text_field :name, placeholder: "Name of the Ingredient" %>
<% end %>

<p><%= f.submit %></p>
<% end %>
