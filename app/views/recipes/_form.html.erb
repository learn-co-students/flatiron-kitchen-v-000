<%= form_for @recipe do |f|  %>
  <%= f.label :name %>:
  <%= f.text_field :name %>
  <br>
  <%= f.label :ingredients %>:
  <br>
  <%= f.collection_check_boxes(:ingredient_ids, Ingredient.all, :id, :name) do |b| %>
    <%= b.label { b.check_box + b.text} %>
    <br>
  <% end %>
  <br>
  <%= f.submit %>
<% end %>
