<%= form_for recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label 'ingredients:' %>
  <%= f.collection_check_boxes :ingredients, Ingredient.all, :id, :name  %><br>

  <%= f.submit %>
<% end %>

