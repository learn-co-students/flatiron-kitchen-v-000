<%= form_for @recipe do |f| %>

  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= collection_check_boxes :recipe, :ingredient_ids, Ingredient.all, :id, :name %>
  </div>

  <div>
    <%= f.fields_for :ingredients, @recipe.ingredients.build do |i| %>
      <%= i.label :name %><br>
      <%= i.text_field :name %>
    <% end %>
  </div>

  <%= f.submit %>
<% end %>