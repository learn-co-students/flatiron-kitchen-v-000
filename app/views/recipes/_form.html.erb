<%= form_for recipe do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
  <%= f.fields_for :ingredients, recipe.ingredients.build do |recipes_field| %>
    <%= recipes_field.text_field :name %>
  <% end %>

  <%= f.submit %>

<%end%>