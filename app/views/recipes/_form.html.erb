<%= form_for @recipe do |f| %>
  <%= f.label :name %>
    <%= f.text_field :name %>
      <br>
  Choose existing ingredients:
    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %>
      <br>
  Add a new ingredient:
      <br>
    <%= f.fields_for :ingredient do |i| %>
      <%= i.text_field :name %>
  <% end %>
    <br>
  <%= f.submit %>
<% end %>
