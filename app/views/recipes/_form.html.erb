<%= form_for recipe do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br></br>

    <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br></br>

    <%= f.fields_for :ingredients do |ingredient_fields| %>
      <%= ingredient_fields.label :name %>
      <%= ingredient_fields.text_field :name %><br></br>
    <% end %>

    <%= f.submit %><br></br>
<% end %>
