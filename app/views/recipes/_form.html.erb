<%= form_for recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :ingredients %>
  <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name%><br>
  <%= f.fields_for :ingredients, @recipe.ingredients.build do |ing| %>
    <%= ing.text_field :name %><br>
  <% end %><br><br>
<%= f.submit %>
<% end %>